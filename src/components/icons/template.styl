@font-face
  font-family '<%= fontName %>'
  src url('<%= fontPath %><%= fontName %>.eot')
  src url('<%= fontPath %><%= fontName %>.eot?#iefix') format('eot'),
    url('<%= fontPath %><%= fontName %>.woff') format('woff'),
    url('<%= fontPath %><%= fontName %>.woff2') format('woff2'),
    url('<%= fontPath %><%= fontName %>.ttf') format('truetype')
  font-weight normal
  font-style normal

icon(type, dir = false, margin = true)
  if type
    content type
  display inline-block
  font-family '<%= fontName %>'
  font-style normal
  font-weight normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  if dir is left // Fixes height/valign for icons in buttons
    float left
    if margin
      margin-right ($indent/2)
  if dir is right
    float right
    if margin
      margin-left ($indent/2)
<% _.each(glyphs, function(glyph) { %>
$icon-<%= glyph.name %> = '\<%= glyph.unicode[0].charCodeAt(0).toString(16).toUpperCase() %>'
.icon-<%= glyph.name %>:before
  icon($icon-<%= glyph.name %>, false)
<% }); %>
