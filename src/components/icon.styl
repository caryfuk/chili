@font-face
  font-family 'icons'
  src url('assets/font/icons.eot')
  src url('assets/font/icons.eot?#iefix') format('eot'),
    url('assets/font/icons.woff') format('woff'),
    url('assets/font/icons.woff2') format('woff2'),
    url('assets/font/icons.ttf') format('truetype')
  font-weight normal
  font-style normal

icon(type, dir = false, margin = true)
  if type
    content type
  display inline-block
  font-family 'icons'
  font-style normal
  font-weight normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  if dir is left // Fixes height/valign for icons in buttons
    float left
    if margin
      margin-right ($indent/2)
  if dir is right
    float right
    if margin
      margin-left ($indent/2)

