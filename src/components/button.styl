/*
  chilli-seed | button
  ============================== */

$buttonColor = $colorBlue

button-clear()
  &
  &:hover
  &:active
  &[disabled]
    unless @border-color
      border-color transparent
    unless @background-color
      background-color transparent
    unless @box-shadow
      box-shadow none
    unless @outline
      outline 0

$button
  display inline-block
  vertical-align middle
  font-size $fontS
  line-height $lineHeight
  min-width @line-height
  appearance none
  border $border
  outline 0
  padding 0 $indent
  border-radius $borderRadius
  color $buttonColor
  text-decoration none
  cursor pointer
  text-align center
  button-clear()

  &:hover
    text-decoration none

// Default

button
.button
[role='button']
[class^='button-']
[class*=' button-']
  @extends $button
  background-color $colorWhite
  border-color $colorGreyAlt
  transition-property border-color, box-shadow
  transition-duration $transitionDuration
  transition-timing-function $transitionEasing

  &:hover:not([disabled])
    border-color $colorGrey
    box-shadow $boxShadowInput

  &:active:not([disabled])
    border-color $colorBlue
    transition-property box-shadow

  &[disabled]
    color $colorGrey
    background-color $colorGreyLight
    border-color $colorGreyLight
