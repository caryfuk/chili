/*
  chilli-seed | icons
  ============================== */

@font-face
  font-family 'icons'
  src url('assets/font/icons.eot')
  src url('assets/font/icons.eot?#iefix') format('eot'),
    url('assets/font/icons.woff') format('woff'),
    url('assets/font/icons.ttf') format('truetype'),
    url('assets/font/icons.svg#icons') format('svg')
  font-weight normal
  font-style normal

[class*='icon-']:before
  margin-top -4px // icon offset for Chrome 45
  display inline-block
  vertical-align middle
  font-family 'icons'
  font-style normal
  font-weight normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

$icon-add = '\E001'
$icon-arrow-down = '\E002'
$icon-calendar = '\E003'
$icon-chevron-left = '\E004'
$icon-chevron-right = '\E005'
$icon-clock = '\E006'
$icon-delete = '\E007'
$icon-list = '\E008'
$icon-star = '\E009'
$icon-trash = '\E00A'

.icon-add:before
  content $icon-add

.icon-arrow-down:before
  content $icon-arrow-down

.icon-calendar:before
  content $icon-calendar

.icon-chevron-left:before
  content $icon-chevron-left

.icon-chevron-right:before
  content $icon-chevron-right

.icon-clock:before
  content $icon-clock

.icon-delete:before
  content $icon-delete

.icon-list:before
  content $icon-list

.icon-star:before
  content $icon-star

.icon-trash:before
  content $icon-trash
