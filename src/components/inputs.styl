/*
  chilli-seed | inputs
  ============================== */

$checkboxSize = $fontM

// Text

input[type='text']
  height $lineHeight
  padding 0 $indent
  border $border
  border-radius $borderRadius
  border-color $colorGreyAlt
  outline 0
  transition border-color $transitionDuration $transitionEasing

  &:hover:not([disabled])
    border-color $colorGrey

  &:focus:not([disabled])
    border-color $colorBlue

  &[required]:valid:not([disabled])
    border-color $colorGreen

  &:invalid:not([disabled])
    color $colorRed
    border-color $colorRed

  &[disabled]
    color $colorGrey
    background-color $colorGreyLight
    border-color $colorGreyAlt

// Checkbox, Radio

checkbox(type = checkbox)
  hide(display)

  + label
    position relative
    display inline-block
    line-height inherit

    &:before
    &:after
      cursor pointer

    &:before
      if type is checkbox
        icon($icon-checkbox, left)
      else if type is radio
        icon($)
      color $colorGrey

  &:checked + label:after
    icon($icon-checkmark)
    position absolute
    left 0
    top 50%
    transform translateY(-50%)

input[type='checkbox']
input[type='radio']
  checkbox()
