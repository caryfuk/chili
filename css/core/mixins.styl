// Mixins

clearfix() // Gallagher
  &:after
  &:before
    content ''
    display table
  &:after
    clear both
  
hide-text() // Kellum
  text-indent 100%
  white-space nowrap
  overflow hidden

truncate(width)
  max-width width or 100%
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

pseudo(display)
  content ''
  display display or block

v-center(pos, posX = left right)
  position pos or absolute
  left 0 if left in posX
  right 0 if right in posX
  top 50%
  transform translateY(-50%)